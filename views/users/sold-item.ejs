<%- include ../partials/header.ejs %>
    <section id="main">
      <div class="container">
        <div class="row">
          <%- include ../partials/leftbar.ejs %>

          <div class="col-md-9">
            <div class="panel panel-default">
              <div class="panel-heading" style="background-color:  #095f59; color: white;">
                <h3 class="panel-title">Items</h3>
              </div>
              <div class="panel-body">
                <table class="table table-striped table-hover">
                  <tr>
                    <th>No</th>
                    <th>Item</th>
                    <th>Price</th>
                    <th>Percentage</th>
                    <th>Foundation</th>
                  </tr>
                  <% items.forEach((item, i) => {%>
                    <% if(item.status === 'sold') { %>
                      <tr>
                          <td><%= i+1 %></td>
                          <td> <%= item.name %> </td>
                          <td> <%= toRupiah(item.price) %> </td>
                          <td> <%= item.percentage %> %</td>
                          <td> <%= item.Foundation.foundation_name %> </td>
                        </tr>
                    <% } %>
                  <% }) %>

                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
<%- include ../partials/footer.ejs %>
