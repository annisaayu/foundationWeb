<%- include ../partials/header.ejs%>

  <div>
    <form action="/foundation/items/buy/<%= item.itemCode %>" method="POST">
      <div class="form-group col-md-6">
        <label >Item Name :</label>
        <input type="text" class="form-control" name="name" value="<%= item.name %>" disabled> <br/>
      </div>

      <div class="form-group col-md-6">
        <label>Price :</label>
        <input type="number" class="form-control" name="price" value="<%= item.price %>" disabled> <br/>
      </div>

      <div class="form-group col-md-6">
        <label>Total Donasi :</label>
        <input type="number" class="form-control" name="percentage" value="<%= (item.price * item.percentage) / 100 %>" disabled> <br/>
      </div>

      <input type="submit" class="btn btn-primary" value="Buy">
    </form>
  </div>

<%- include ../partials/footer.ejs%>
