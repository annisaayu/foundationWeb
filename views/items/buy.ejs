<%- include ../partials/header.ejs %>
    <section id="main">
      <div class="container">
        <div class="row">
          <%- include ../partials/leftbar.ejs %>

          <div class="col-md-9">
            <div class="panel panel-default">
              <div class="panel-heading" style="background-color:  #095f59; color: white;">
                <h3 class="panel-title">Detail Item</h3>
              </div>
              <div class="panel-body">
                <form action="/foundation/items/buy/<%= item.itemCode %>" method="POST">
                  <div class="form-group col-md-6">
                    <label >Item Name :</label>
                    <input type="text" class="form-control" name="name" value="<%= item.name %>" disabled> <br/>

                    <label>Price :</label>
                    <input type="number" class="form-control" name="price" value="<%= item.price %>" disabled> <br/>

                    <label>Total Donasi :</label>
                    <input type="number" class="form-control" name="percentage" value="<%= (item.price * item.percentage) / 100 %>" disabled> <br/>

                    <input type="submit" class="btn btn-primary col-md-12" style="margin: 15px 0;" value="Buy">
                    <a href="/foundation" class="btn btn-warning  col-md-12" style="margin-top: 10px;"> Cancel </a>
                  </div>

                  <div class="form-group col-md-6">
                    <div class="image-item">
                      <img src="http://i.imgur.com/8LaeZcN.png" class="img-responsive img-thumbnail" alt="Cinque Terre" width="400" style="margin-top: 20px"> 
                    </div>
                  </div>
                </form>



              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
<%- include ../partials/footer.ejs %>
